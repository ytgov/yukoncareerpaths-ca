{#
/**
 * @file
 * Layouts: Nested 2 Column.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout-section',
    'layout',
    'layout--nested--2-col',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="row">
      {% if content.first %}
        <div class="col-md-6">
          <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
            {{ content.first }}
          </div>
        </div>
      {% endif %}
      {% if content.second %}
        <div class="col-md-6">
          <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second') }}>
            {{ content.second }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
